{
  "manifest_version": 2,

  "name": "ShoutBox Chat",
  "description": "ShoutBox chat allows to connect people who visit the same browser pages and creates real time chat between visitors.",
  "version": "0.0.3",

  "permissions": [
    "activeTab",
    "webNavigation",
    "webRequest",
    "tabs"
  ],
  
  "browser_action": {
    "default_icon": "icon_32.png",
    "default_popup": "shoutbox.html"
  },
  "icons": {
  "16":"icon_16.png",
  "32":"icon_32.png",
	"48":"icon_48.png",
  "96":"icon_96.png",
  "128":"icon_128.png"
  },
"background": {
    "scripts": ["socket.io.js", "jquery.min.js", "background.js"]
  }
  
  
}